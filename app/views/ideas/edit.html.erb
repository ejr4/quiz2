<h1>Edit Idea</h1>

<%= form_for(@idea) do |f| %>
  <% if @idea.errors.present? %>
    <p>
      <%= @idea.errors.full_messages.join(', ') %>
    </p>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  
  <%= f.submit 'Update Idea' , class: "btn btn-outline-primary" %>
<% end %>